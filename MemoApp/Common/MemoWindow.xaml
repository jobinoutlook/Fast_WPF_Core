<Window x:Class="MemoApp.Common.MemoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MemoApp.Common"
        mc:Ignorable="d"
        Title="Memo Window" Height="600" Width="580" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" ShowInTaskbar="False">
    <DockPanel LastChildFill="True">
        <ToolBar x:Name="toolBar" DockPanel.Dock="Top" Height="62"/>
        <StatusBar DockPanel.Dock="Bottom" Height="35" />
        <GroupBox x:Name="groupBox" Header="Memo Details" Width="548" Height="452">
            <Canvas Height="445" VerticalAlignment="Center">
                <RichTextBox x:Name="richTextBox" Height="167" Width="517" HorizontalAlignment="Center" Canvas.Top="268" VerticalAlignment="Top" Canvas.Left="10">
                    <FlowDocument>
                        <Paragraph>
                            <Run Text="RichTextBox"/>
                        </Paragraph>
                    </FlowDocument>
                </RichTextBox>
                <ToolBar x:Name="toolBar1" Height="36" Canvas.Left="10" Canvas.Top="227" Width="517" HorizontalAlignment="Center" VerticalAlignment="Top"/>
                <Border BorderBrush="#FFA4A3A3" BorderThickness="1" Height="212" Width="517" HorizontalAlignment="Center" VerticalAlignment="Center" Canvas.Top="10" Canvas.Left="10">
                    <Canvas>
                        <Label x:Name="label" Content="Memo ID" Canvas.Left="72" Canvas.Top="61" HorizontalAlignment="Left" VerticalAlignment="Center" Width="90" Height="26"/>
                        <Label x:Name="label_Copy" Content="Memo Title" Canvas.Left="72" Canvas.Top="107" Width="90" Height="26" HorizontalAlignment="Center" VerticalAlignment="Top"/>
                        <Label x:Name="label_Copy1" Content="Memo Date" Canvas.Left="72" Canvas.Top="152" Width="90" Height="26" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                        <TextBox x:Name="txtMemoID" Canvas.Left="222" TextWrapping="Wrap" Canvas.Top="111" Width="266" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                        <TextBox x:Name="txtMemoTitle" Canvas.Left="222" TextWrapping="Wrap" Canvas.Top="66" Width="106" HorizontalAlignment="Center" VerticalAlignment="Top" IsReadOnly="True" Background="#FFEFECEC"/>
                        <DatePicker x:Name="datePicker" Canvas.Left="222" Canvas.Top="156" Height="25" Width="266" HorizontalAlignment="Center" VerticalAlignment="Center"/>

                    </Canvas>
                </Border>
            </Canvas>
        </GroupBox>

    </DockPanel>

</Window>
