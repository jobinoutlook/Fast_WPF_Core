<Window x:Class="MemoApp.Common.MemoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MemoApp.Common"
        mc:Ignorable="d"
        Title="MemoWindow" Height="600" Width="580">
    <DockPanel LastChildFill="True">
        <ToolBar x:Name="toolBar" DockPanel.Dock="Top" Height="62"/>
        <StatusBar DockPanel.Dock="Bottom" Height="40"/>
        <GroupBox x:Name="groupBox" Header="Memo Details" Width="549" Height="467">
            <Canvas Height="445" VerticalAlignment="Center">
                <RichTextBox x:Name="richTextBox" Height="167" Width="517" HorizontalAlignment="Center" Canvas.Top="268" VerticalAlignment="Top" Canvas.Left="10">
                    <FlowDocument>
                        <Paragraph>
                            <Run Text="RichTextBox"/>
                        </Paragraph>
                    </FlowDocument>
                </RichTextBox>
                <ToolBar x:Name="toolBar1" Height="25" Canvas.Left="10" Canvas.Top="238" Width="517" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                <Border BorderBrush="Black" BorderThickness="1" Height="212" Width="517" HorizontalAlignment="Center" VerticalAlignment="Center" Canvas.Top="10" Canvas.Left="10"/>
            </Canvas>
        </GroupBox>

    </DockPanel>

</Window>
