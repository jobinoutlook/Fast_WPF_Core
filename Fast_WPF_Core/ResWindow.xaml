<Window x:Class="Fast_WPF_Core.ResWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Fast_WPF_Core"
        mc:Ignorable="d"
        Title="ResWindow" Height="510" Width="800"
    xmlns:System="clr-namespace:System;assembly=System.Runtime">
    <Window.Resources>
        <!--<System:Double x:Key="MyButtonWidth">121</System:Double>-->
        <System:Double x:Key="LoadButtonWidth">121</System:Double>
    </Window.Resources>
    <Grid>
        <Button x:Name="btnLoadWin" Content="Load window resource" HorizontalAlignment="Left" Margin="135,184,0,0" VerticalAlignment="Top" Width="135" Height="33" Click="btnLoadWin_Click"/>
        <Label x:Name="lblWinRes" Content="Label" HorizontalAlignment="Center" Margin="0,188,0,0" VerticalAlignment="Top" Width="148" Background="#FFF2CBCB"/>
        <Button x:Name="btnLoadApp" Content="Load App resource" HorizontalAlignment="Left" Margin="135,244,0,0" VerticalAlignment="Top" Width="135" Height="33" Click="btnLoadApp_Click"/>
        <Label x:Name="lblAppRes" Content="Label" HorizontalAlignment="Center" Margin="0,248,0,0" VerticalAlignment="Top" Width="148" Background="#FFF2CBCB"/>
        <Button FontSize="{DynamicResource My_ButtonFontSize}" x:Name="button" Content="Load" HorizontalAlignment="Left" Margin="285,39,0,0" VerticalAlignment="Top" Height="40" Width="{DynamicResource LoadButtonWidth}" Click="button_Click"/>
        <Button x:Name="btnSaveWinRes" Content="Save window Resource" HorizontalAlignment="Left" Margin="135,334,0,0" VerticalAlignment="Top" Width="135" Height="30" Click="btnSaveWinRes_Click"/>
        <TextBox x:Name="txtWindowRes" HorizontalAlignment="Center" Margin="0,334,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="148" Height="30"/>
        <Button x:Name="btnSaveAppRes" Content="Save App Resource" HorizontalAlignment="Left" Margin="135,384,0,0" VerticalAlignment="Top" Width="135" Height="30" Click="btnSaveAppRes_Click"/>
        <TextBox x:Name="txtApplicationRes" HorizontalAlignment="Center" Margin="0,384,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="148" Height="30" TextChanged="textBox_TextChanged"/>


    </Grid>
</Window>
