<Window x:Class="Fast_WPF_Core.ResourceWindow1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Fast_WPF_Core"
        mc:Ignorable="d"
        Title="ResourceWindow1" Height="450" Width="800"
    xmlns:System="clr-namespace:System;assembly=System.Runtime">
    <Window.Resources>
        <SolidColorBrush x:Key="ButtonBackground" Color="GreenYellow"/>
        <FontWeight x:Key="ButtonFontWeight">Bold</FontWeight>
        <System:Double x:Key="ButtonWidth">110</System:Double>
        <System:Double x:Key="ButtonHeight">35</System:Double>
    </Window.Resources>
    <Grid>
        <Button x:Name="button" Content="Add New" Background="{DynamicResource ButtonBackground}"  HorizontalAlignment="Left" Margin="275,69,0,0" VerticalAlignment="Top" Height="{DynamicResource ButtonHeight}" Width="{DynamicResource ButtonWidth}" Click="button_Click" FontWeight="{DynamicResource ButtonFontWeight}"/>
        <Button x:Name="button1" Content="Save As" HorizontalAlignment="Left" Margin="275,134,0,0" VerticalAlignment="Top" 
                Height="{DynamicResource ButtonHeight}" 
                Width="{DynamicResource ButtonWidth}" 
                Background="{DynamicResource ButtonBackground}" 
                FontWeight="{DynamicResource ButtonFontWeight}"/>
        <Button x:Name="button2" Content="exit" HorizontalAlignment="Left" Margin="275,202,0,0" VerticalAlignment="Top" Click="button2_Click" 
                Height="{DynamicResource ButtonHeight}" 
                Width="{DynamicResource ButtonWidth}" 
                Background="{DynamicResource ButtonBackground}" 
                FontWeight="{DynamicResource ButtonFontWeight}"/>

    </Grid>
</Window>
