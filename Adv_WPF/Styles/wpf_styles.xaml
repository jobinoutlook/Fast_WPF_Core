<Window x:Class="Adv_WPF.Styles.wpf_styles"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Adv_WPF.Styles"
        mc:Ignorable="d"
        Title="wpf_styles" Height="450" Width="605">
    <Window.Resources>
        <Style x:Key="BtnStyle1" TargetType="Button">
            <Setter Property="Background" Value="Red"/>
            <Setter Property="Foreground" Value="Yellow"/>
        </Style>
        <Style x:Key="BtnStyle2" TargetType="Button">
            <Setter Property="Width" Value="100"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="Background" Value="LightGreen"/>
        </Style>
        <Style x:Key="BtnStyle3" TargetType="Button">
            <Setter Property="Background" Value="Blue"/>
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="DemiBold"/>
        </Style>
    </Window.Resources>
    <Grid>
        <Button x:Name="button" Content="Button" Style="{DynamicResource BtnStyle1}"  HorizontalAlignment="Left" Margin="245,84,0,0" VerticalAlignment="Top" Width="90" Height="30" />
        <Button x:Name="button_Copy" Content="Button" Style="{DynamicResource BtnStyle2}" HorizontalAlignment="Left" Margin="245,139,0,0" VerticalAlignment="Top" />
        <Button x:Name="button_Copy1" Content="Button" HorizontalAlignment="Left" Margin="245,197,0,0" VerticalAlignment="Top" Width="90" Height="30" Style="{DynamicResource BtnStyle3}"/>
        <Button x:Name="button_Copy2" Content="Button" HorizontalAlignment="Left" Margin="245,259,0,0" VerticalAlignment="Top" Width="90" Height="30" Style="{DynamicResource BtnStyle3}"/>

    </Grid>
</Window>
