<Window x:Class="Adv_WPF.Toolbar_Ribbon.wpf_tab_control"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Adv_WPF.Toolbar_Ribbon"
        mc:Ignorable="d"
        Title="wpf_tab_control" Height="450" Width="800">
    <Grid>
    <TabControl x:Name="tabControl">
      <TabItem>
        <TabItem.Header>
          <StackPanel Orientation="Horizontal">
            <Image Source="/Data/Icons/edit_pencile_icon.png" Width="16" Height="16"/>
            <Label Content="Settings"/>
          </StackPanel>
        </TabItem.Header>
        <Grid Background="#FFE5E5E5"/>
      </TabItem>
      <TabItem Header="TabItem">
        <Grid Background="#FFE5E5E5"/>
      </TabItem>
    </TabControl>

  </Grid>
</Window>
